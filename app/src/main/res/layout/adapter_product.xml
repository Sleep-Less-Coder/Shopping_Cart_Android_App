<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:paddingTop="10dp"
android:paddingBottom="10dp"
android:paddingLeft="10dp"
android:paddingRight="10dp">
<ImageView
    android:id="@+id/ivProductImage"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_marginRight="16dp"
    android:contentDescription="Laptop Image" />
<LinearLayout
    android:id="@+id/infoSection"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/ivProductImage"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Product Name"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tvProductDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Description"
        android:textSize="15sp"
        android:textStyle="italic"
        android:fontFamily="sans-serif-light"/>
</LinearLayout>

<RelativeLayout
    android:id="@+id/pricingSection"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/ivProductImage"
    android:orientation="vertical"
    android:layout_marginTop="16dp">
    <TextView
        android:id="@+id/tvProductPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Price"
        android:textAllCaps="true"
        android:textColor="#33adda"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"/>
    <TextView
        android:id="@+id/tvAddToCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tvProductPrice"
        android:text="Add To Cart"
        android:layout_marginLeft="16dp"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:textAllCaps="true"
        android:textColor="@color/green"
        android:background="@drawable/textview_border"
        android:alpha="0.5"
        />
</RelativeLayout>
</RelativeLayout>